@model Product
<form method="post"  >
    <div class="my-5">
        <input type="text" asp-for="Name"  class="form-control" placeholder="Enter Name"/>
    <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="my-5">
        <input type="text" asp-for="Price" class="form-control" placeholder="Enter Price"/>
 <span asp-validation-for="Price" class="text-danger"></span>
   
    </div>
    <div class="my-5">
        <input type="text" asp-for="Color" class="form-control" placeholder="Enter Color"/>
    <span asp-validation-for="Color" class="text-danger"></span>
   
    </div>
    <input type="submit" class="btn-primary" value="Create" />
</form>

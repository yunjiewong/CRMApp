@model EmployeeResponseModel

<h1>Employee Details</h1>

<table class="table">
    @{
        <tr>
            <th>Employee Id</th>
            <td>@Model.Id</td>
        </tr>
        <tr>
            <th>Full Name</th>
            <td>@Model.FullName</td>
        </tr>
        <tr>
            <th>Profile</th>
            <td><img src=@Model.PhotoPath alt="Profile" width="200" height="200"></td>
        </tr>
        <tr>
            <th>City</th>
            <td>@Model.City</td>
        </tr>
        <tr>
            <th>Address</th>
            <td>@Model.Address</td>
        </tr>
        <tr>
            <th>BirthDate</th>
            <td>@Model.BirthDate</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>@Model.Title</td>
        </tr>
        <tr>
            <th>Phone number</th>
            <td>@Model.Phone</td>
        </tr>


    }
</table>

<a asp-action="Index" asp-controller="Employee" class="bg-success btn">Back to Employee Page</a>

<a asp-action="List" asp-controller="Employee" class="bg-success btn">Back to Employee List</a>

